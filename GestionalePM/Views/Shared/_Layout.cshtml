<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - Applicazione ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <nav class="navbar navbar-expand-lg bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                @Html.ActionLink("DB-PoliziaMuncipale", "Index", "Home", new { area = "" }, new { @class = "navbar-brand text-white" })
            </a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", new { @class = "text-white text-decoration-none mx-2" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Trasgressori", "Create", "Home", new { @class = "text-white text-decoration-none mx-2" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Violazioni", "InsViolazione", "Home", new { @class = " text-white text-decoration-none mx-2" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Verbale", "InsVerbale", "Home", new { @class = " text-white text-decoration-none mx-2" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Registro Verbale", "RegistroVerbale", "Home", new { @class = " text-white text-decoration-none mx-2" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Applicazione ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>