@model GestionalePM.Models.Violazione

@{
    ViewBag.Title = "InsViolazione";
}

<h2 class="text-center">Inserire il tipo di Violazione</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Violazione</h4>
